{% import "__button_macro.twig" as forms %}
{% block content %}

{% for object in anime_series %}
    <div class="col-3"> {# специально всё обернул в див, чтобы блоки не слипались #}
        <li class="list-group-item m-2 text-center">
            <div>
                <img src="{{ object.image }}" class="border border-2 rounded-3" style="width: 240px; height: 320px;">
            </div>

            <div class="mt-2">
                <div class="row">
                    <a class="btn btn-primary" href="/anime-series/{{ object.id }}">{{ object.title }}</a>
                </div>
                <div class="mt-2">
                    <a class="btn btn-link" href="/anime-series/{{ object.id }}/image">Картинка</a>
                    <a class="btn btn-link" href="/anime-series/{{ object.id }}/info">Описание</a>
                </div> 
            </div>
        </li>
    </div>
{% endfor %}

{% endblock %}