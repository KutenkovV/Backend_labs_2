{% extends "__layout.twig" %}

{% block content %}

<div class="d-flex row">
    {% for object in anime_series %}
        <ul class="list-group col-3">
            <li class="list-group-item m-2 text-center position-relative">
                <div class="position-absolute" style="right: 0px; top: 8px;">
                    {# кнопка удаления #}
                    <form action="/anime-series/{{ object.id }}/delete" method="POST">
                        <button class="btn" type="submit">
                            <i class="fas fa-times"></i>
                        </button>
                    </form>
                    {# кнопка редактирования #}
                    <form action="/anime-series/{{ object.id }}/edit" method="POST">
                        <button class="btn" type="submit">
                            <i class="fas fa-edit"></i>
                        </button>
                    </form>
                </div>
                <div>
                    <img src="{{ object.image }}" class="border border-2 rounded-3" style="width: 240px; height: 320px;">
                </div>
    
                <div class="mt-2">
                    <div class="row">
                        <a class="btn btn-primary" href="/anime-series/{{ object.id }}">{{ object.title }}</a>
                    </div>
                    <div class="mt-2">
                        <a class="btn btn-link" href="/anime-series/{{ object.id }}?show=image">Картинка</a>
                        <a class="btn btn-link" href="/anime-series/{{ object.id }}?show=info">Описание</a>
                    </div> 
                </div>
            </li>
        </ul>
    {% endfor %}
</div>

{% endblock %}