{% extends "__layout.twig" %}

{% block content %}

<div class="d-flex row">
    {% for object in anime_series %}
        <ul class="list-group col-3">
            <li class="list-group-item m-2 text-center">
                <div>
                    <img src="{{ object.image }}" class="border border-2 rounded-3" style="width: 240px; height: 320px;">
                </div>
    
                <div class="mt-2">
                    <div class="row">
                        <a class="btn btn-primary" href="/anime-series/{{ object.id }}">{{ object.title }}</a>
                    </div>
                    <div class="mt-2">
                        <a class="btn btn-link" href="/anime-series/{{ object.id }}?show=image">Картинка</a>
                        <a class="btn btn-link" href="/anime-series/{{ object.id }}?show=info">Описание</a>
                    </div> 
                </div>
            </li>
        </ul>
    {% endfor %}
</div>

{% endblock %}